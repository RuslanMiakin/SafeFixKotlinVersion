<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#40CAC0C0" />
                    <corners android:radius="15dp" android:bottomRightRadius="45dp"
                        android:bottomLeftRadius="45dp"
                        android:topRightRadius="45dp"
                        android:topLeftRadius="45dp" />
                </shape>
            </item>
            <item android:right="2px" android:bottom="2px">
                <shape >
                    <padding android:bottom="5dp" />
                    <gradient android:angle="270" android:endColor="#0D0D0E" android:startColor="#0D0D0E" />
                    <corners android:radius="18dp" android:bottomRightRadius="45dp"
                        android:bottomLeftRadius="45dp"
                        android:topRightRadius="45dp"
                        android:topLeftRadius="45dp"/>
                    <padding android:bottom="10dp" android:left="10dp" android:right="5dp" android:top="10dp" />

                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#102746" />
                    <corners android:radius="19dp" android:bottomRightRadius="45dp"
                        android:bottomLeftRadius="45dp"
                        android:topRightRadius="45dp"
                        android:topLeftRadius="45dp" />

                </shape>
            </item>
            <item android:bottom="5px">
                <shape>
                    <padding android:bottom="5dp" />
                    <gradient android:angle="270" android:endColor="#000000" android:startColor="#202975" />
                    <corners android:radius="19dp" android:bottomRightRadius="45dp"
                        android:bottomLeftRadius="45dp"
                        android:topRightRadius="45dp"
                        android:topLeftRadius="45dp"/>
                    <padding android:bottom="10dp" android:left="10dp" android:right="5dp" android:top="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>